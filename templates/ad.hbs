<div id='adform' class='row'>
<div class='col-md-12'>
<div class='form-group'>
  <label for='adName'>Ad Name</a>
  <input class='form-control' id='adName' name='adName' placeholder='Name of Ad' {{#if name}}value='{{name}}'{{/if}}>
</div>
<div id='titleParts' class='col-md-6'>
  <h2>Title Parts</h2>
  <ul id='listTitleParts' class='list-group col-md-12'>
    {{#each titleParts}}
      {{> title_part}}
    {{/each}}
  </ul>
  <a class='btn btn-primary' id='addTitlePart' action='addTitlePart'>
    <span class='glyphicon glyphicon-plus'></span>
  </a>
</div>
<div id='bodyParts' class='col-md-6'>
  <h2>Body Parts</h2>
  <ul id='listBodyParts' class='list-group col-md-12'>
    {{#each bodyParts}}
      {{> body_part}}
    {{/each}}
  </ul>
  <div class='btn-group'>
    <button type='button' class='btn btn-primary' data-toggle='dropdown' aria-expanded='false'>
      <span class='glyphicon glyphicon-plus'></span><span class="caret"></span>
    </button>
    <ul class='dropdown-menu' role='menu'>
      <li><a class='addBodyPart' action='addBodyPart' data='list'>List</a></li>
      <li><a class='addBodyPart' action='addBodyPart' data='paragraph'>Paragraph</a></li>
    </ul>
  </div>
</div>
<input type='hidden' id='adId' {{#if id}} value='{{id}}'{{/if}}>
</div>
<a class='btn btn-success pull-right' id='generate' action='generateAd'>Generate Ad <span class='glyphicon glyphicon-wrench'></span></a>
</div>
